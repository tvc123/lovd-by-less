
<% content_for :head do  -%>
<%= auto_discovery_link_tag :rss, formatted_profile_url(@profile, :rss), :title=>"#{@profile.f}'s recent activity" %>
<%= auto_discovery_link_tag :rss, formatted_profile_blogs_url(@profile, :rss), :title=>"#{@profile.f}'s Blogs" %>
<%= auto_discovery_link_tag :rss, formatted_profile_photos_url(@profile, :rss), :title=>"#{@profile.f}'s Photos" %>
<% end -%>

<h1>Your Dashboard</h1>
<div id="sub_nav">
  <%= link_to 'View Public Profile', profile_path(@p).add_param(:public_view => true) %>
  <%= link_to 'Messages', messages_path unless @p.received_messages.empty? && !@p.has_network? %>
  <%= link_to 'Photos', profile_photos_path(@p) %>
  <%= link_to 'Friends', profile_friends_path(@p) if @p.has_network? %>
  <%= link_to 'Blog', profile_blogs_path(@p) %>
  <%= link_to 'Account Settings', edit_profile_path(@p) %>
</div>

<%= render :partial => 'profiles/getting_started' %>

<div class="half left">
  <%= render :partial => 'profiles/recent_activity' %>
</div>

<div class="half right">
<%= render :partial => 'friends/list', :locals => {:type => 'friends'} %>
<%= render :partial => 'friends/list', :locals => {:type => 'followers'} %>
<%= render :partial => 'friends/list', :locals => {:type => 'followings'} %>
</div>

<div class="clear"></div>