
<% content_for :head do  -%>
<%= auto_discovery_link_tag :rss, formatted_profile_url(current_user, :rss), :title=>"#{current_user.login}'s recent activity" %>
<%= auto_discovery_link_tag :rss, formatted_user_blogs_url(current_user, :rss), :title=>"#{current_user.login}'s Blogs" %>
<%= auto_discovery_link_tag :rss, formatted_user_photos_url(current_user, :rss), :title=>"#{current_user.login}'s Photos" %>
<% end -%>

<h1>My TWB</h1>
<%= render :partial => 'shared/user_menu', :locals => {:user => @user} %>
<%= render :partial => 'users/getting_started' %>

<div class="half left">
  <%= render :partial => 'profiles/recent_activity' %>
</div>

<div class="half right">
  <%= render :partial => 'friends/list', :locals => {:type => 'friends'} %>
  <%= render :partial => 'friends/list', :locals => {:type => 'followers'} %>
  <%= render :partial => 'friends/list', :locals => {:type => 'followings'} %>
</div>

<div class="clear"></div>