<%
#locals
comments ||= @comments
parent ||= @parent
@count = comments.total_entries
%>


<% content_for :head do  -%>  
  <%= auto_discovery_link_tag(:rss, formatted_user_comments_url(@user, :rss), :title=>"Wall to wall with #{@user.f}") %>
<% end -%>



<h1>Wall-to-Wall</h1>
<div id="sub_nav">
  <%= link_to "&larr; Back to Profile", profile_path(@user) %>
  <%= inline_tb_link 'Add A Comment', "new_comment", :title => "Adding A Comment" %>
</div>

<%= render :partial => 'comments/form' %>
  
<div id="<%= "#{dom_id(parent)}_comments" %>">
	<%= render :partial => 'comments/comment', :collection => comments %>
	
	<%= will_paginate %>
</div>